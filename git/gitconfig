[core]
    excludesFile = ~/dotfiles/git/gitignore
[user]
    name = Alli Nilles
    email = anilles137@gmail.com
[push]
    default = simple
[merge]
    tool = vimdiff2
[alias]
    st = status --short

    d  = diff
    dc = diff --cached

    b  = branch
    ba = branch --all

    c  = commit
    ca = commit --all

    hist = log --abbrev-commit --decorate --date=relative --all \
            --graph --topo-order \
            --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)'

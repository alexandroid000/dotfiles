[merge]
    tool = vimdiff2
[alias]
    st = status --short

    d  = diff
    dc = diff --cached

    b  = branch
    ba = branch --all

    c  = commit
    ca = commit --all
    cs = commit --amend

    hist = log --abbrev-commit --decorate --date=relative --all \
            --graph --topo-order \
            --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)'

    chist = log --abbrev-commit --decorate --date=relative --all \
            --graph --topo-order --simplify-by-decoration \
            --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)'

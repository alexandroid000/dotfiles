# General Environment
# -------------------

### Directories
export DOTFILES="$HOME/dotfiles"
export DOWNLOADS="$HOME/downloads"
export SRC="$HOME/src"
export MEDIA="$HOME/media"
export MUSIC="$MEDIA/music/auto"

### Applications
export VISUAL="/usr/bin/vim"
export EDITOR="/usr/bin/vim"
export VIEWER="mupdf"
export BROWSER="w3m"
export PUBLISHER="git"
export PLAYER="mpv"

### Printing
export PRINT_SERVER="ews"
export PRINTER="siebl-3323-printer"

### Path
export PATH="$PATH:$HOME/bin"
export MUSIC="$MEDIA/music"
export SCRATCH="$HOME/scratch"

### Python path
typeset -T PYTHONPATH pythonpath
pythonpath=(/home/alli/bin $pythonpath)
export PYTHONPATH
export pythonpath
typeset -U path pythonpath

path=(/home/alli/bin /home/alli/.cabal/bin $path)
export PATH
export path

export USR_LIB_PATH=/home/alli/Arduino/libraries/

export ANDROID_HOME=/opt/android-sdk


# Program-Specific Environments
# -----------------------------

### Markdown
export MD_DATA="$DOTFILES/md"

# XDG dirs
export XDG_DATA_HOME="$HOME/.local/share"
export XDG_CONFIG_HOME="$DOTFILES"
export XDG_CACHE_HOME="$HOME/.cache"
export XDG_DOWNLOAD_DIR="$DOWNLOADS"
export XDG_DESKTOP_DIR="/dev/null"
#export XDG_RUNTIME_DIR="$HOME/.local/tmp"
export XDG_CONFIG_HOME="$HOME/.config"

# Host-Specific Environments
# --------------------------

case "$HOST" in
    alliarch)
        OS_DISTRO="arch"
        ;;
    brooks)
        OS_DISTRO="arch"
        ;;
    *)
        OS_DISTRO=""
        ;;
esac
export OS_DISTRO

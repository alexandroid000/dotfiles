bindsym XF86MonBrightnessDown   exec "sudo /home/alli/dotfiles/i3/scripts/backlight_control 0"
bindsym XF86MonBrightnessUp     exec "sudo /home/alli/dotfiles/i3/scripts/backlight_control 1"
#
## music keybindings
bindsym $mod+y       exec "music vote up"
bindsym $mod+n       exec "music vote down"
bindsym Control+space   exec "music cmus pause"
bindsym Control+b       exec "music cmus next"
bindsym Control+z       exec "music cmus prev"
